<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="font" format="string" />
    <attr name="color" format="color|reference" />
    
    <attr name="text" format="string|reference" />
    <attr name="textColor" format="color|reference" />
    <attr name="textSize" format="dimension|reference" />
    
    <declare-styleable name="FontTextView" >
        <attr name="font" />
    </declare-styleable>
    
    <declare-styleable name="RiseView" >
        <attr name="rise_range" format="dimension|reference" />
        <attr name="fall_range" format="dimension|reference" />
    </declare-styleable>
    
    <declare-styleable name="AlarmClockBlock" >
        <attr name="font" />
        <attr name="color" />
        <attr name="textColor" />
    </declare-styleable>
    
    <declare-styleable name="SlideSwitcher">
        <attr name="textSize" />
        <attr name="textColor" />
    </declare-styleable>
    
    <declare-styleable name="DebossFontText">
        <attr name="font" />
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textPaddingOffset" format="dimension" />
        <attr name="colorOffset" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="DialPicker">
        <attr name="color" />
    </declare-styleable>
    
    <declare-styleable name="Knob">
        <attr name="angleRange_max" format="integer" />
        <attr name="angleRange_min" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="TitleIndicator">
        <attr name="text" />
        <attr name="textSize" />
        <attr name="color" />
    </declare-styleable>
    
    <declare-styleable name="CurveView">
        <attr name="color" />
    </declare-styleable>
    
    <declare-styleable name="CurveSwitcher">
        <attr name="checked" format="boolean" />
        <attr name="viewMode">
            <enum name="upper" value="0" />
            <enum name="lower" value="1" />
        </attr>
        <attr name="drawableMask" format="reference" />
        <attr name="angleRange" format="integer" />
    </declare-styleable>
    
</resources>
